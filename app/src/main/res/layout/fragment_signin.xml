<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="42dp"
            android:text="Jolie Cafe"
            android:textColor="@color/text"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:paddingBottom="32dp"
            android:text="SIGN IN"
            android:textColor="@color/primary_200"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingBottom="14sp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Username"
                android:textColor="@color/text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/text"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingBottom="8sp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Password"
                android:textColor="@color/text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/text"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingBottom="14sp">

            <TextView
                android:id="@+id/tv_forgot_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Forgot password?"
                android:textColor="@color/primary_200"
                android:textSize="20sp" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:width="150sp"
            android:background="@drawable/bg_light_primary_corner_10"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:text="SIGN IN"
            android:textColor="@color/text"
            android:textSize="16dp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:text="- OR -"
            android:textColor="@color/text"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:paddingTop="16sp"
            android:paddingBottom="16sp">

            <ImageView
                android:id="@+id/icon_facebook"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/icon_google"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp"
                android:background="@color/text"
                android:src="@drawable/ic_google" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:paddingTop="16sp"
            android:paddingBottom="16sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingTop="16dp"
                android:text="Not signed up yet?"
                android:textColor="@color/text"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/text_clicked_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingTop="16dp"
                android:text=" Sign up here"
                android:textColor="@color/primary_200"
                android:textSize="14dp"
                />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>